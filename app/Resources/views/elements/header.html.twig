{% if app.user.username is defined %}

    <!--Main Navigation-->
    <header>

        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar font-quicksand">
            <div class="container-fluid m-1">
                <a class="navbar-brand h3-responsive" href="{{ path('homepage') }}"><strong><i class="fa fa-shopping-cart" aria-hidden="true"></i> {{ title }}</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-center" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('article_list') }}"> <i class="fa fa-list-ul screen-dsiplay" aria-hidden="true"></i> List <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"> <i class="fa fa-shopping-basket screen-dsiplay" aria-hidden="true"></i> Basket </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="modal" data-target="#exampleModal" href="#"> <i class="fa fa-user screen-dsiplay" aria-hidden="true"></i> Profile</a>
                        </li>
                    </ul>
                    <form class="form-inline ml-auto">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                        <button href="#!" class="btn btn-outline-white btn-md my-0" type="submit"><i class="fa fa-search fa-3x" aria-hidden="true"></i></button>
                    </form>
                </div>
            </div>
        </nav>


        {% if homeNavbar is defined %}
            <div class="view intro hm-purple-light">
                <div class="full-bg-img flex-center">
                    <div class="container text-center white-text fadeInDownBig animated">
                        <h2 class="font-quicksand h2-responsive">Welcome on Pokeshop !</h2>
                        <br>
                        <h5 class="font-didact h5-responsive">Pokeshop allow you to sale and buy any pokemons</h5>
                        <div class="divider-new font-quicksand h5-responsive">Buy them all !</div>
                        <a href="{{ path('article_add') }}" role="button" class="btn btn-primary font-quicksand btn-size">Sale your pokemon here</a>
                        <a href="{{ path('article_list') }}" role="button" class="btn btn-secondary font-quicksand btn-size">See all that we have</a>
                        <a class='js-scrollTo icon-scroll' href="#scroll"></a>
                    </div>
                </div>
            </div>
        {% endif %}


    </header>
    <!--Main Navigation-->


    <!-- Modal -->
    <div class="modal fade right" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-full-height modal-right" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <img src="{{ asset('uploads/users_pictures/'~app.user.picture) }}" alt="user's picture" class="img-fluid margin-auto rounded-circle" style="max-height: 30vh">
                </div>
                <div class="modal-body">
                    <br>
                    <h3> <li class="fa fa-user"></li> Username : {{ app.user.username }}</h3>
                    <br>
                    <h3> <li class="fa fa-envelope-o"></li> Email : {{ app.user.email }}</h3>
                    <br>
                    <h3> <li class="fa fa-money"></li> Money : {{ app.user.money }} $</h3>
                    <br>
                    <h3>
                        <img src="{{ asset('img/poke_icon.png') }}" alt="{{ app.user.picture }}" class="img-fluid margin-auto" style="max-height: 30px">
                        For sale :
                        {% for article in app.user.articles %}
                            <a href="{{ path('article_details', {'id':article.id}) }}">{{ article.pokemon.name|capitalize }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </h3>
                    <br>
                    <h3> <li class="fa fa-arrow-circle-o-up"></li> N° of sales : {{ app.user.sale }}</h3>
                    <br>
                    <h3> <li class="fa fa-arrow-circle-o-down"></li> N° of purchases : {{ app.user.purchase }}</h3>
                </div>
                <div class="modal-footer margin-auto">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"> <i class="fa fa-close"></i> </button>
                    <a role="button" href="{{ path('logout') }}" class="btn btn-primary"> <i class="fa fa-sign-out"></i> </a>
                    <a role="button" href="{{ path('user_edit') }}" class="btn btn-warning"> <i class="fa fa-edit"></i> </a>
                    <a role="button" href="{{ path('user_delete', {'id':app.user.id}) }}" onclick="return confirm('{{ app.user.username|capitalize }}, are you sure abot delete your account ?');"  class="btn btn-danger"> <i class="fa fa-trash"></i> </a>
                </div>
            </div>
        </div>
    </div>

{% endif %}
