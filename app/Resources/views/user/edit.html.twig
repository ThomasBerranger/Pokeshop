{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid view" style="height: 100vh">
        <br><br><br><br>
        <br><br><br>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 card py-5 m-5 white">

                <div class="row">
                    <div class="col-md-1"></div>
                    <div class="col-md-10">
                        <h2 class="text-center h2-responsive font-quicksand py-2">Edit your profil</h2>

                        {{ form_start(form) }}

                        <div class="md-form">
                            {{ form_row(form.username) }}
                        </div>

                        <div class="md-form">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="md-form">
                            {{ form_row(form.money) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}


