{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid p-5 view-list">
        <div class="row">
            <div class="col-md-12 p-5 article-table">

                <div class="card">
                    <div class="card-body">

                        <!-- Grid row -->
                        <div class="row">

                            <!-- Grid column -->
                            <div class="col-md-6 mt-1 margin-auto">

                                <div class="input-group md-form form-sm form-2 pl-0">
                                    <input class="form-control my-0 py-1 grey-border" type="text" placeholder=" Search" aria-label="Search">
                                    <span class="input-group-addon waves-effect grey lighten-3" id="basic-addon1"><a><i class="fa fa-search text-grey" aria-hidden="true"></i></a></span>
                                </div>

                            </div>
                            <!-- Grid column -->

                        </div>
                        <!-- Grid row -->

                        <div class="row">
                            {% for article in articles %}

                                <div class="col-sm-12 col-md-6 col-lg-4 hoverable cursor-pointer py-2" onclick="location.href='{{ path('article_details', {'id':article.id}) }}'">
                                    <div class="row">
                                        <div class="col-md-6 text-center">
                                            {% if not article.picture %}
                                                no picture
                                            {% else %}
                                                <img src="{{ asset('uploads/articles_pictures/'~article.picture) }}" alt="{{ article.pokemon.name }}" class="img-fluid" style="max-height: 200px;">
                                            {% endif %}
                                        </div>
                                        <div class="col-md-6">
                                            <h2 class="align-middle h2-responsive my-2">{{ article.pokemon.name|capitalize }}</h2>
                                            <h4 class="align-middle h4-responsive my-3">Types :
                                                <span class="border-{{ article.pokemon.type1 }}">{{ article.pokemon.type1 }}</span>
                                                <span class="border-{{ article.pokemon.type2 }}">{{ article.pokemon.type2 }}</span>
                                            </h4>
                                            <h4 class="align-middle h4-responsive my-3">{{ article.price }} $</h4>
                                            <h5 class="align-middle h5-responsive my-3">{{ article.createdAt|date('m / d / Y') }}</h5>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}
{% block stylesheets %}
{% endblock %}
