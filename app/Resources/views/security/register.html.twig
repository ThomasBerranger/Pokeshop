{% extends 'base.html.twig' %}


{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/security-style.css') }}" />
{% endblock %}


{% block body %}

    <div class="w-100">

        <div class="container font-quicksand">
            <div class="row">
                <div class="col-md-6 margin-auto p-5">
                    <!--Panel-->
                    <div class="card">
                        <div class="card-header success-color lighten-1 white-text text-center h4-responsive">
                            Sign up <i class="fa fa-sign-in" aria-hidden="true"></i>
                        </div>

                        <div class="card-body">

                            {{ form_start(form) }}

                            <div class="md-form">
                                {{ form_row(form.username) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                            <div class="md-form">
                                {{ form_row(form.termsAccepted) }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-success">Register</button>
                            </div>

                            {{ form_end(form) }}

                            <hr>
                            <h5 class="pull-right h5-responsive">Already a member ? <a href="{{ path('login') }}">Sign in</a></h5>

                        </div>

                    </div>
                </div>
                <!--/.Panel-->
            </div>
        </div>
    </div>


{% endblock %}

